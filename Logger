internal class Logger
    {
        public string MEror { get; set; }
        public string MInfo { get; set; }
        public string MWarning { get; set; }
        public Logger()
        {
            MEror = "";
            MWarning = "";
            MInfo = "";

        }
        public void LgEror (string messege)
        {
            MEror += messege + "";

        }
        public void LgInfo (string messege)
        {
            MInfo += messege + "";
        }
        public void LgWarning (string messege)
        {
            MWarning += messege + "";
        }
        public void Log (string type, string messege)
        {
            Console.WriteLine("{ DataTime.Now}: { type}: { messege}");
        }
        public void TXT()
        {
            File.WriteAllText("log.txt", MEror);
            File.WriteAllText("log.txt", MInfo);
            File.WriteAllText("log.txt", MWarning);
        }
    }
}
